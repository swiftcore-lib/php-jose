{
    "name": "swiftcore-lib/php-jose",
    "description": "Pure PHP implementation of JSON Object Signing and Encryption library.",
    "type": "library",
    "require": {
        "php": "^5.6|^7.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^5.5",
        "satooshi/php-coveralls": "^1.0"
    },
    "autoload": {
        "psr-4": {
            "Swiftcore\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Swiftcore\\Jose\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "vendor/bin/phpunit",
        "test-with-coverage": "vendor/bin/phpunit --verbose --coverage-clover build/logs/clover.xml"
    },
    "license": "MIT License",
    "authors": [
        {
            "name": "YQ",
            "email": "yquan@msn.com"
        }
    ],
    "minimum-stability": "stable"
}
